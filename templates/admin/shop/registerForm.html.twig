<div class="row g-4">
    <div class="col-md-6">
        <label class="form-label fw-semibold text-secondary">Brand Name</label>
        {{ form_widget(form.brandName, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Name'}}) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold text-secondary">Product Name</label>
        {{ form_widget(form.productName, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Name'}}) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold text-secondary">Product Type</label>
        {{ form_widget(form.productType, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Type New/Old'}}) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold text-secondary">Price</label>
        {{ form_widget(form.price, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Price'}}) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold text-secondary">Photos</label>
        {{ form_widget(form.photo, {'attr': {'class': 'form-control rounded-3 shadow-sm'}}) }}
    </div>

    <div class="col-6">
        <label class="form-label fw-semibold text-secondary">Rating</label>
        {{ form_widget(form.rating, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Rating'}}) }}
    </div>

    <div class="col-6">
        <label class="form-label fw-semibold text-secondary">Select Size</label>
        {{ form_widget(form.size, {'attr': {'class': 'form-control select2 rounded-3 shadow-sm', 'placeholder': 'Product Size',  'multiple': "multiple"}}) }}
    </div>

    <div class="col-6">
        <label class="form-label fw-semibold text-secondary">Gender</label>
        {{ form_widget(form.gender, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Gender'}}) }}
    </div>

