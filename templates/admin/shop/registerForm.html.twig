        <label class="form-label fw-semibold text-secondary">Product Details</label>
        {{ form_widget(form.productDetail, {'attr': {'class': 'form-control rounded-3 shadow-sm', 'placeholder': 'Product Details', 'rows': '3'}}) }}
    </div>
</div>

<div class="text-center mt-4">
    <button type="submit" class="btn btn-success px-5 py-2 rounded-pill shadow fw-bold">
        Submit
    </button>
</div>

