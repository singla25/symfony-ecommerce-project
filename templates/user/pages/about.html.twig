{% extends 'user/internal_base.html.twig' %}

{% block userContent %}

    <!-- Hero Banner -->
    <div class="position-relative text-center w-100" style="height: 40vh; overflow: hidden;">
        <img src="{{ asset('img/banner/b4.png') }}" alt="bannerImage" class="w-100 h-100 position-absolute top-0 start-0" style="object-fit: cover; filter: brightness(0.7);">
        <div class="position-absolute top-50 start-50 translate-middle px-5 text-white text-center" style="max-width: 600px;">
            <h2 class="fw-bold mb-2 display-5">#KnowUsMore</h2>
            <p class="lead mb-4">More than just a brand — a journey of creativity, craftsmanship, and connection.</p>
        </div>
    </div>

    <!-- Who We Are Section -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-4">
                <div class="col-md-6 text-center">
                    <img src="{{ asset('img/about/a1.png') }}" alt="About Us Image" class="img-fluid rounded shadow">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-3">Who We Are</h2>
                    <p class="text-muted">
                        At <strong>ShopNext</strong>, fashion is not just about clothing—it's a reflection of your identity.
                        Our mission is to deliver premium-quality styles that are both accessible and affordable.
                        Every product we craft is designed to empower your individuality, offering a perfect blend of comfort, authenticity, and trendsetting design.
                    </p>
                    <p class="text-muted">
                        Starting with a vision to redefine shopping experiences, we are committed to offering
                        a unique collection that resonates with your personality. Whether you're shopping online or visiting our store, we’re here to make every moment count.
                    </p>
                    <p class="text-muted">
                        Our vision is simple yet powerful — to inspire confidence in every person who wears ShopNext. We aim to create a space where fashion is inclusive, expressive, and made with heart.
                    </p>
                    <p class="text-muted">
                        By combining online convenience with offline personal touch, we’re building a brand that values both digital and human connections. Every customer, every outfit, every smile — that’s what keeps us going.
                    </p>
                    <a href="{{ path('user_shop_page') }}" class="btn btn-outline-success mt-3 px-4 py-2">Explore Our Collection</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Offline Store Video Section -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Experience ShopNext In Real Life</h2>
            <p class="text-muted mb-4">
                Love what you see online? Visit our offline store and immerse yourself in an atmosphere of creativity, vibrant collections, and personalized styling assistance.
            </p>
            <div class="ratio ratio-16x9 rounded shadow overflow-hidden" style="max-width: 800px; margin: 0 auto;">
                <video src="{{ asset('img/about/video.mp4') }}" controls poster="{{ asset('img/about/a2.png') }}"></video>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-5 features">
        <div class="px-5">
            <h2 class="fw-bold text-center mb-5">Why Choose ShopNext?</h2>
            <div class="row g-4 justify-content-center">
                {% set featureBoxs = [
                    { name: 'Free & Fast Shipping', img: 'f1.png'},
                    { name: 'Hassle-Free Online Orders', img: 'f2.png'},
                    { name: 'Affordable Premium Fashion', img: 'f3.png'},
                    { name: 'Exclusive Offers & Promotions', img: 'f4.png'},
                    { name: 'Customer-First Service', img: 'f5.png'},
                    { name: '24/7 Friendly Support', img: 'f6.png'},
                ] %}

                {% for featureBox in featureBoxs %}
                    <div class="col-6 col-md-4 col-lg-2">
                        <div class="card border-0 shadow-sm feature-card h-100 text-center p-3">
                            <div class="feature-img-wrapper mx-auto mb-3 bg-white shadow" style="width: 100px; height: 100px; display: flex; align-items: center; justify-content: center;">
                                <img src="{{ asset('img/features/' ~ featureBox.img) }}" alt="{{ featureBox.name }}" class="img-fluid" style="max-height: 60px;">
                            </div>
                            <h5 class="fw-semibold">{{ featureBox.name }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newLetter py-5" style="background: linear-gradient(135deg, #0c2a4d, #183d5a);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h2 class="text-white fw-bold mb-2">Stay Updated with ShopNext</h2>
                    <p class="text-white-50 mb-0">Subscribe to our newsletter and be the first to know about <span class="text-warning fw-semibold">exclusive offers, flash sales, and new arrivals.</span></p>
                </div>
                <div class="col-md-6">
                    {{ form_start(form, {'attr': {'class': 'd-flex'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control me-2 px-3', 'placeholder': 'Your email address'}}) }}
                    <button type="submit" class="btn btn-success px-4 shadow">Subscribe Now</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
