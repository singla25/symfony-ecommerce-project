{% extends 'user/internal_base.html.twig' %}

{% block userContent %}
    <!-- Banner -->
    <div class="position-relative text-center w-100" style="height: 20vh; overflow: hidden;">
        <img src="{{ asset('img/banner/b6.jpg') }}" alt="bannerImage"
             class="w-100 h-100 position-absolute top-0 start-0" style="object-fit: cover; filter: brightness(0.7);">
        <div class="position-absolute top-50 start-50 translate-middle px-5 text-white text-center" style="max-width: 600px;">
            <h2 class="fw-bold my-2">Shopping Cart</h2>
        </div>
    </div>

    <!-- Cart -->
    <div class="container my-5 p-4">
        <div class="row">
            <!-- Your Cart -->
            <div class="col-lg-9">
                <div class="border rounded shadow-sm p-4 bg-dark bg-opacity-25 shadow-sm">
                    <h4 class="fw-bold text-center py-3 bg-secondary-subtle text-warning-emphasis shadow-sm">
                        Review Your Cart
                    </h4>

                    {% set total = 0 %}
                    {% for product in products %}
                        {% set subtotal = product.price * product.quantity %}
                        {% set total = total + subtotal %}

                        <div class="row align-items-center py-3 border-bottom">

                            <div class="col-3 d-flex justify-content-center">
                                <img src="{{ asset('img/products/' ~ product.productImage) }}"
                                     class="img-fluid"
                                     style="object-fit: contain; max-height: 140px;"
                                     alt="{{ product.productName }}">
                            </div>

                            <div class="col-6">
                                <h5 class="fw-bold mb-1">
                                    <a href="{{ path('user_productDetails', { 'id': product.productId }) }}"
                                       class="text-decoration-none text-dark">
                                        {{ product.productName }}
                                    </a>
                                </h5>

                                <p class="mb-1">Size: <strong>{{ product.size }}</strong></p>
                                <div class="d-flex align-items-center mb-2">
                                    <span class="me-2">Quantity:</span>
                                    <label>
                                        <input type="number" class="form-control form-control-sm text-center"
                                               style="width: 80px; min-width: 60px;"
                                               value="{{ product.quantity }}" min="1">
                                    </label>
                                </div>
                                <button type="button" href="#" class="btn btn-danger">Delete</button> |
                                <button type="button" href="#" class="btn btn-warning">Save for later</button>
                            </div>

                            <!-- Price Section -->
                            <div class="col-3 d-flex flex-column justify-content-center align-items-end h-100">
                                <h5 class="fw-bold mb-1">Price: ${{ product.price }}</h5>
                                <p class="mb-0">Subtotal: ${{ subtotal }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- RIGHT: Summary Section -->
            <div class="col-lg-3">
                <div class="border rounded shadow-sm p-4 mb-4 bg-dark bg-opacity-25 shadow-sm">
                    <h5 class="fw-bold mb-3">Subtotal ({{ products|length }} items)</h5>
                    <h4 class="mb-3 text-success fw-bold">Total: ${{ total }}</h4>
                    <button class="btn btn-success w-100">Proceed to Buy</button>
                </div>

                {% set firstProductId = products|first ? products|first.productId : null %}

                {% if firstProductId %}
                    {% set recommendedProductLink = path('user_productDetails', { 'id': firstProductId }) %}
                {% else %}
                    {% set recommendedProductLink = '#' %}
                {% endif %}

                <div class="border rounded shadow-sm p-4 mb-4 bg-dark bg-opacity-25">
                    <div class="alert alert-info shadow-sm">
                        <h5 class="fw-bold text-center">Similar Products</h5>
                    </div>

                    <div class="row g-3">
                        {% for product in relatedProducts %}
                            <div class="col-12">
                                <div class="d-flex bg-white shadow-sm rounded p-2 align-items-center hover-shadow" style="transition: 0.3s;">
                                    <!-- Product Image Left -->
                                    <div class="flex-shrink-0">
                                        <img src="{{ asset('img/products/' ~ product.photo) }}"
                                             alt="{{ product.brandName }}"
                                             style="width: 120px; height: 120px; object-fit: cover; border-radius: 10px;">
                                    </div>

                                    <!-- Product Details Right -->
                                    <div class="ms-3 flex-grow-1">
                                        <!-- Brand Name -->
                                        <span class="text-muted small text-uppercase">{{ product.brandName }}</span>

                                        <!-- Product Name as Link -->
                                        <h6 class="fw-bold my-2 mb-1">
                                            <a href="{{ path('user_productDetails', { 'id': product.id }) }}"
                                               class="text-decoration-none text-dark d-inline-block"
                                               style="transition: color 0.3s;">
                                                {{ product.productName|length > 30 ? product.productName|slice(0,30) ~ '...' : product.productName }}
                                            </a>
                                        </h6>

                                        <!-- Price Section -->
                                        <div class="d-flex align-items-center mb-2">
                                            <h5 class="text-success mb-0 fw-bold">${{ product.price }}</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
